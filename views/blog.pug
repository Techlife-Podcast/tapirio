extends layout

block content
  include partials/header
  
  .container.page
    .blog-content
      .row
        .col.col-lg-2
          h2 Blog
        .col-lg-7
          ul.article-list.list-unstyled
            each article, ind in articles
              if ind < 2
                li.featured
                  a(href="/blog/" + article.slug)
                    h3
                      =article.title
                      | 
                    small.meta= article.date
                    p= article.description
              else
                li
                  a(href="/blog/" + article.slug)
                    ion-icon(name='document-text')
                    =article.title
                    | 
                    small.meta= article.date

        .col.col-lg-3
          .input-group.search-container.mb-3
            input.form-control(type='text' placeholder='Search posts' aria-label='Search posts' aria-describedby='basic-addon2')
            .input-group-append
              button.btn.btn-outline-secondary(type="button")
                i.gg-search

  include partials/footer